<!doctype html>
<html lang="en" data-bs-theme="auto">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">

    <title>
        <%= title %> | AllTheFeelz
    </title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">

</head>

<body>

    <main class="userlogin">

        <!-- Page container - include forms, components etc within container-->
        <div class="container">

            <section class="vh-100 bg-image">
                <div class="d-flex align-items-center h-100">
                    <div class="container h-100">
                        <div class="row d-flex justify-content-center align-items-center h-100">
                            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                                <div class="text-center">
                                    <a href="/">
                                        <img src="/img/AllTheFeelz.png" />
                                    </a>
                                </div>
                                <div class="card" style="border-radius: 15px;">
                                    <div class="card-body p-5">
                                        <h2 class="text-uppercase text-center mb-5">Please Login</h2>

                                        <% if (loginsuccess.status=='failure' ) { %>
                                            <div class="alert alert-danger" role="alert">
                                                <%= `${loginsuccess.message}, please try again.` %>
                                            </div>
                                            <% } %>

                                                <form action="/userlogin" method="post">

                                                    <div class="form-outline mb-4">

                                                        <div class="form-outline mb-4">
                                                            <input type="text" class="form-control form-control-lg"
                                                                placeholder="Username" aria-label="Username"
                                                                id="username" name="username" required>
                                                        </div>

                                                        <div class="form-outline mb-4">
                                                            <input type="password" class="form-control form-control-lg"
                                                                placeholder="Password" aria-label="Password"
                                                                id="password" name="password" required>
                                                        </div>


                                                        <div class="d-flex justify-content-center">
                                                            <button type="submit" class="btn btn-warning m-2">Login</button>
                                                            <a href="/" class="btn btn-light m-2"><u>Cancel</u></a>
                                                        </div>

                                                        <p class="text-center text-muted mt-5 mb-0">Don't have an
                                                            account?
                                                            <a href="/userregistration"
                                                                class="fw-bold text-body"><u>Register here</u></a>
                                                        </p>

                                                </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

        </div><!-- /.container -->

    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

</body>

</html>